<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="Dialog_bocop">
        <item name="android:windowBackground">@color/bocop_dialog_bg</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--ToolBar TextSize style-->
    <style name="ToolBar.TitleText" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#444444</item>
        <item name="android:singleLine">true</item>
        <item name="android:ellipsize">end</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <!--ToolBar MainText style-->
    <style name="ToolBar.MainText" parent="ToolBar.TitleText">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">#000000</item>
        <item name="android:background">@null</item>
    </style>
    <!--ToolBar SubText style-->
    <style name="ToolBar.SubText" parent="ToolBar.TitleText">
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">#444444</item>
    </style>


    <!--ToolBar Icon style-->
    <style name="ToolBar.Icon" parent="ToolBar.TitleText">
        <item name="android:layout_width">25dp</item>
        <item name="android:layout_height">25dp</item>
        <item name="android:layout_marginEnd">5dp</item>
    </style>

    <!-- 横分割线 1px -->
    <style name="divider_1px_line">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/color_ebebeb</item>
    </style>
    <!-- 横分割条 -->
    <style name="divider_14dp">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">15sp</item>
        <item name="android:background">@color/color_1</item>
    </style>

</resources>
